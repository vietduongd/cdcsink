# ============================================================
# CDC Application Configuration
# ============================================================

# Config Storage Backend
# Options: files, postgres, postgresql, db
CONFIG_STORAGE=files

# Database URL (only used if CONFIG_STORAGE=postgres)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cdc

# ============================================================
# Logging
# ============================================================

# Log Level
# Options: trace, debug, info, warn, error
RUST_LOG=info

# ============================================================
# API Server
# ============================================================

API_HOST=0.0.0.0
API_PORT=3000
CORS_ENABLED=true

# ============================================================
# Development Settings
# ============================================================

# Configuration directory (for file-based storage)
CONFIG_DIR=config

# ============================================================
# Docker Settings
# ============================================================

# PostgreSQL (when using docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=cdc

# NATS
NATS_URL=nats://localhost:4222

# PgAdmin
PGADMIN_EMAIL=admin@cdc.local
PGADMIN_PASSWORD=admin
