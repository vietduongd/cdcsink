# Ensure shell scripts always use LF line endings
*.sh text eol=lf

# Ensure other text files use LF
*.rs text eol=lf
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.md text eol=lf
*.json text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.css text eol=lf
*.html text eol=lf
*.sql text eol=lf

# Dockerfile
Dockerfile text eol=lf
*.dockerfile text eol=lf
